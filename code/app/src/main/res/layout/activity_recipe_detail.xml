<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- res/layout/activity_recipe_detail.xml -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/background">

        <TextView
            android:id="@+id/datedrecipeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:visibility="invisible"
            tools:visibility="gone" />

        <Button
            android:id="@+id/recipedetailbackbutton"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:text="Back" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">
            <ImageView
                android:id="@+id/recipe_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder_image" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/recipe_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:text="Recipe Title"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/addToToday"
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:text="Add to Today's Meal Plan" />

        <Button
            android:id="@+id/addToDifferentDay"
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:text="Add to Another Day's Meal Plan" />

        <Button
            android:id="@+id/removeMeal"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:text="Remove this meal from a day" />

        <TextView
            android:id="@+id/recipe_instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:text="Instructions" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
